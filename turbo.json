{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV"],
      "outputs": ["dist/**", "static/build/**"]
    },
    "build:app": {
      "dependsOn": ["^build:app"],
      "env": ["NODE_ENV"],
      "outputs": ["dist/**"]
    },
    "build:dev": {
      "dependsOn": ["^build:dev"],
      "env": ["NODE_ENV"],
      "outputs": ["dist/**", "static/build/**"]
    },
    "dev": {
      "dependsOn": ["^build:dev"],
      "cache": false,
      "persistent": true
    },
    "test:unit": {
      "dependsOn": ["build"],
      "cache": true
    }
  }
}
