{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "src/**/*",
    "../packages/core/types/*.d.ts"
  ],
  "exclude": [
    "out",
    "dist",
    "coverage",
    "binaries",
    "static"
  ]
}
